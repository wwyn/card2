/* pages/dynamic/dynamic.wxss */
.dynamic {
  font-size: 30rpx;
  
}
.dynamic-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.location {
  margin: 20rpx 0;
}
.icon image{
   width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
button {
  border: none;
  background-color: #fff;
  margin: 0;
}
button::after {
  border: none;
}
.button-hover {
color:rgba(0, 0, 0, 0.6);
background-color:#fff;
}
 
.icon text {
  vertical-align: middle;
}
.location image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.dynamicImage {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap
}
.dynamicImage image {
  width: 30%;
  margin: 10rpx;
  height: 200rpx;
}
.commentinput {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgba(228, 235, 236,.5);
  position: fixed;
  bottom: 0;
  width: 100%;
}
input {
  background-color: #fff;
  flex: 1;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}
.commentImage {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  border-radius: 100%;
}
.commentIcon {
  width: 40rpx;
  height: 40rpx;
}
.commentContent {
  flex: 1;
  margin-left: 20rpx;
}
.commentList {
  margin: 20rpx 0;
}
.addDynamic {
  background-color: red;
  color: #fff;
  font-size: 46rpx;
  text-align: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  position: fixed;
  right: 0;
  bottom: 500rpx;
}