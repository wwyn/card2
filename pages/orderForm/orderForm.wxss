}
.writes{
    position: absolute;
  width: 80%;
  bottom: -20rpx;
  border-bottom: 1rpx solid #ddd;
 left:100rpx;
}
.logistics-model {
  position: absolute;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100%; 
  background-color: rgba(7, 7, 7,.5);
  text-align: center;
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.logistics-model>view {
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding:20rpx;
  box-sizing: border-box;
  background-color: #fff;
}