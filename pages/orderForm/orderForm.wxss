/* pages/orderForm/orderForm.wxss */
.active {
  border-bottom: 1px solid rgb(11, 95, 252);
}
.orderList {
  font-size: 28rpx;
  border-bottom: 1px solid rgb(228, 242, 252);
  text-align: center;
  display:flex;
align-items:center;
justify-content:space-between;

}
.orderList view {
  width: 100%;
  padding: 20rpx 0;
}
.code {
  font-size: 32rpx;
  border-bottom: 1px solid #ccc;
}
.shop {
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}
.shop image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.shop>view {
  flex: 1;
}
.shop .money {
  text-align: right;
}
.state {
  color: red;
}
.total {
  font-size: 30rpx;
  text-align: right;
}
.bb {
  border-bottom: 1px solid #ccc;
}
.cancel {
  font-size: 30rpx;
  text-align: right;
  color: rgb(11, 95, 252);
}
