/* pages/radar/radar.wxss */
.active{
  color:rgb(11, 95, 252);
  border-bottom: 2px solid rgb(11, 95, 252);
}
.radar {
  text-align: center;
  font-size: 28rpx;
  height: 100vh;
}
.radarTab {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.radarTab view{
  width: 30%;
  text-align: center;
  padding-bottom: 20rpx;
} 
.timeList {
  margin: 20rpx;
}
.timeList .time {
  font-size: 26rpx;
  color:#ccc;
}
.timeList text {
  color: rgb(11, 95, 252);
}
.data {
  margin-top: 40rpx;
}
.day {
  padding: 10rpx 0;
  box-shadow: 4px 4px 10px 0px #ccc;
}
.calendar {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.behaviorList {
  width: 42%;
  text-align: left;
  padding:20rpx;
  margin-top: 20rpx;
  background-color: rgb(235, 233, 233);
  box-sizing: content-box;
}
.behavior-box .behaviorList:nth-child(2n){
  margin-left: 20rpx;
}
.dynamicList {
  padding: 20rpx 0;
  font-size: 28rpx;
}
.pad .dynamicList:nth-child(2n) {
  margin-bottom: 20rpx;
  box-shadow: 4px 4px 10px 0px #ccc;
}
.data-time {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  background-color: rgba(34, 34, 34, 0.3);
  padding: 100rpx 40rpx;
  box-sizing: border-box;
}
.data-box {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.data-box .btn {
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
}