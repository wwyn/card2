/* pages/addDynamic/addDynamic.wxss */
.addDynamic-tab image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.addDynamic-tab view {
  width: 30%;
  text-align: center;
  border-right: 1px solid #ccc;
}
.addDynamic-tab view:nth-child(3) {
  border-right: none;
}
.addDynamic-tab {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
}     
.addDynamic-btn {
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  border-bottom: 1px solid #ccc;
}  
.addDynamic-btn image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
} 
.location image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}     
.affirm {
  background-color: red;
  color:#fff;
  margin-top: 60rpx;
}
.section {
  border: 1px solid #ccc;
  padding: 20rpx;
  box-sizing: border-box;
