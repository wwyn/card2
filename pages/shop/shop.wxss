/* pages/shop/shop.wxss */
.shop {
  font-size: 30rpx;
}
.shop-image {
  margin-bottom: 20rpx;
}
.shop-image image{
  width: 100%;
}
.shop-btn {
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.shop-btn view {
  width: 240rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}
.shop-detail {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.shop-tab {
  padding: 10rpx 0;
  border-bottom: 1px solid #ccc;
}
.shop-tab text {
  display: block;
  text-align: center;
}
.shopList {
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
  margin-top: 20rpx;
}
.shopList image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}